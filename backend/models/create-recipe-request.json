{
    "$schema": "http://json-schema.org/draft-04/schema",
    "name": "recipes",
    "properties": {
        "name":{
            "type": "string",
            "minLength": 1
        },
        "description":{
            "type":"string"
        },
        "reviewRating":{
            "type":"number",
            "minimum": 1
        }
    },
    "type":"object",
    "required":[
        "name",
        "description",
        "reviewRating"
    ],
    "additionalProperties": true
}